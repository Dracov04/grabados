			</ul>
			
			<section class="top-bar-section">
	<!-- Left Nav Section -->
		    	<ul class="left">
	    			<li class="divider"></li>
		    		<li>
		    			<a><%= link_to "Contacto", controller: "luis", action: "contact" %></a>	
		    		</li>
		    	</ul>
